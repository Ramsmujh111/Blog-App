<div class="table-responsive-sm table-call">
  <table class="table table-hover table-dark">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Title</th>
        <th scope="col">Description</th>
        <th scope="col">Image uploaded</th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>
    <tbody>
         <% for(let i=0; i<blogs.length; i++) {%>
          <tr>
            <th scope="row"><%=  i+1 %></th>
            <td><%= blogs[i].title %></td>
            <td><%= blogs[i].description %></td>
            <td><img src="<%= blogs[i].FileDestination %>" class="img-fluid" style="width: 70px;
              height: 50px;" alt=""></td>
            <td><a href="/blog/admin/edit-page/<%=blogs[i]._id%>?_method=PUT"><button>Edit</button></a></td>
            <form action="/blog/admin/delete/<%=blogs[i].id%>?_method=DELETE" method="post">
              <td><a href="/blog/admin/delete/<%=blogs[i]._id%>?_method=DELETE"><button type="submit">Delete</button></a></td>
            </form>
          </tr>
        <% } %>    
    </tbody>
  </table>  
</div>